<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
    <div class="container">
        <header class="d-flex justify-content-center py-3">
            <ul class="nav nav-pills">
                <li class="nav-item px-2">
                    <a href="{{ path('movies_list') }}" class="btn btn-outline-dark" aria-current="page">
                        {% trans %}titles.home{% endtrans %}
                    </a>
                </li>
                <li class="nav-item px-2">
                    <a href="{{ path('movies_list') }}" class="btn btn-outline-dark">
                        {% trans %}titles.movies{% endtrans %}
                    </a>
                </li>
                {% if app.user %}
                    <li class="nav-item px-2">
                        <a href="{{ path('profile') }}" class="btn btn-outline-dark">
                            {% trans %}titles.profile{% endtrans %}
                        </a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-dark">
                            {% trans %}buttons.logout{% endtrans %}
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item px-2">
                        <a href="{{ path('app_login') }}" class="btn btn-outline-dark">
                            {% trans %}buttons.login{% endtrans %}
                        </a>
                    </li>
                {% endif %}
            </ul>
            <div class="d-flex align-items-center">
                <a href="{{ path('translate', {_locale: 'en', 'uri': app.request.uri}) }}"><span class="fi-gb fi {{ app.request.locale == 'en' ? 'selected' : '' }}"></span></a>
                <div class="px-1"></div>
                <a href="{{ path('translate', {_locale: 'fr', 'uri': app.request.uri}) }}"><span class="fi-fr fi {{ app.request.locale == 'fr' ? 'selected' : '' }}"></span></a>
            </div>
        </header>
    </div>
        {% block body %}{% endblock %}
    </body>
</html>
